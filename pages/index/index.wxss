/* 没有待办的时候 */

/* .scro {
  height: 800rpx;
} */

.nonedaiban {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-top: 100rpx;
  color: #cfcdce;
  font-size: 28rpx;
}

.nonedaiban image {
  width: 60%;
  height: 350rpx;
  margin: 0 auto;
}

.container {
  height: 100%;
}

.containerZhezhao {
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 100;
  opacity: .6;
  background: #4c4c4c;
}

.bigIndex {
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 100;
  opacity: .6;
  background: #4c4c4c;
  z-index: 400;
}

.containerHide {
  display: none;
}

.calendar_top {
  height: 200rpx;
}

.calendar_top image {
  float: left;
  padding-left: 40rpx;
  width: 200rpx;
  height: 200rpx;
}

.calendar_date {
  float: left;
  padding-top: 25rpx;
  margin-left: 40rpx;
}

.calendar_date p {
  color: #5e5e5e;
  font-weight: 700;
  font-size: 45rpx;
}

.calendar_done {
  font-weight: normal;
  font-size: 25rpx;
  color: white;
  width: 210rpx;
  padding: 10rpx;
  text-align: center;
  margin-top: 10rpx;
  background-color: #3caa9a;
  border-radius: 20rpx;
}

.calendar_hide button {
  margin-top: 20rpx;
  background: #f0f0f0;
  width: 100%;
  height: 40rpx;
  position: relative;
}

.calendar_hide button::after {
  border: none;
}

.calendar_hide button image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

/* 日历部分开始 */

.body-view {
  height: 0;
  overflow: hidden;
  background: #f0f0f0;
}

.days-table {
  flex-wrap: wrap;
  align-content: flex-start;
}

.week-row {
  width: 100%;
}

.calendar {
  z-index: 10000;
  background: #f0f0f0;
}

.grid {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: .7rem;
  color: #000;
}

.today {
  color: #3caa9a;
}

.grid view {
  height: 60rpx;
  line-height: 60rpx;
  width: 60rpx;
  margin: 0 auto;
}

.choice view {
  border-radius: 50%;
  background: #3caa9a;
  background-position: center;
  color: white;
}

/* 非本月日期 */

.notCurrent {
  color: #b0b0b0;
}

.swpier-box {
  height: 600rpx;
  width: 100%;
}

.arrow {
  width: 100rpx;
  color: #3caa9a;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.year-and-month {
  color: #3caa9a;
}

.flex {
  display: flex;
}

/* 轴向 */

.column {
  flex-direction: column;
}

/* 主轴方向 */

.m-start {
  justify-content: flex-start;
}

.m-end {
  justify-content: flex-end;
}

.m-around {
  justify-content: space-around;
}

.m-between {
  justify-content: space-between;
}

.m-center {
  justify-content: center;
}

/* 侧轴方向 */

.s-start {
  align-items: flex-start;
}

.s-end {
  align-items: flex-end;
}

.s-around {
  align-items: space-around;
}

.s-between {
  align-items: space-between;
}

.s-center {
  align-items: center;
}

/* 日历部分结束 */

.daiban {
  width: 85%;
  height: 130rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e6e6e6;
}

.rankNone {
  color: #ccc;
  background-color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 500rpx;
  margin-top: 100rpx;
}

.daiban .count {
  font-size:24rpx;
  color:#cacaca;
  margin-top: 15rpx;
}

.disabled {
  text-decoration: line-through;
}

.daiban_l {
  display: flex;
  flex-direction: column;
}

.daiban_l .top {
  font-size: 32rpx;
  color: black;
}

.daiban_l .bottom {
  font-size: 24rpx;
  color: #cacaca;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.daiban_l .bottom image {
  margin-right: 20rpx;
}

.expand {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  z-index: 200;
}

.exList {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}

.exList .ex_block {
  display: flex;
  justify-content: space-around;
  align-items: center;
  opacity: 0;
  /* display: none; */
}

.ex_block p {
  font-size: 28rpx;
  color: #ffffff;
  margin-right: 20rpx;
}

.set_daka {
  width: 520rpx;
  height: 320rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 200;
  border: 1px solid #3caa9a;
}

.none {
  display: none;
}

.set_daka button {
  /* background: none; */
  font-size: 28rpx;
  background: #3caa9a;
  color: white;
  margin: 0;
  padding: 0px 60rpx;
  display: inline;
}

.set_daka .top {
  background: #3caa9a;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  display: flex;
  justify-content: flex-start;
  position: relative;
}

.set_daka .top p {
  text-indent: 40rpx;
}

.set_daka .top image {
  width: 30rpx;
  height: 80rpx;
}

.set_daka .close {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.daka_bottom {
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #ffffff;
}

.daka_bottom picker {
  width: 100%;
}

.daka_bottom picker input {
  width: 80%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #3d444d;
  padding: 10rpx 5rpx;
  border-bottom: 1px solid #3caa9a;
  text-align: center;
}

.daka_bottom p {
  font-size: 28rpx;
  color: #b5ac95;
}

/* 添加待办部分 */

.add_daiban {
  width: 520rpx;
  height: 570rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 200;
}

.none {
  display: none;
}

.add_daiban button {
  font-size: 28rpx;
  background: #3caa9a;
  color: white;
  padding: 0px 60rpx;
}

.add_daiban .top {
  background: #3caa9a;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  display: flex;
  justify-content: flex-start;
  position: relative;
}

.add_daiban .top p {
  text-indent: 40rpx;
}

.add_daiban .top image {
  width: 30rpx;
  height: 80rpx;
}

.add_daiban .close {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.daiban_bottom {
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  position: relative;
}

.daiban_bottom button {
  position: absolute;
  bottom: 20rpx;
}

.daiban_bottom input {
  width: 80%;
  font-size: 28rpx;
  color: #3d444d;
  padding: 10rpx 5rpx;
  border-bottom: 1px solid #3caa9a;
  text-align: center;
  margin-top: 25rpx;
}

.button_t {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.button_t view {
  width: 140rpx;
  height: 60rpx;
  background-color: #e6e6e6;
  color: #969696;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10px;
}

.button_b {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 40rpx;
  opacity: 0;
}

.button_b view {
  width: 140rpx;
  height: 60rpx;
  background-color: #e6e6e6;
  color: #969696;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10px;
  margin: 10rpx 10rpx;
}

.timeChange {
  color: white!important;
  background-color: #3caa9a!important;
}

.button_b input {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  border: none;
}

/* 完成打卡部分 */

.finished {
  width: 520rpx;
  height: 400rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 500;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
}

.finished .bottom {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.finished .bottom p {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  text-align: center;
  color: #bbbbbb;
}

.finished .bottom button {
  background: none;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 80rpx;
  background: #3caa9a;
  color: white;
  line-height: 80rpx;
  text-align: center;
  border-radius: 0;
  font-size: 28rpx;
}

.finished .top {
  width: 80%;
  border-bottom: 1px solid #cdcdcd;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.finished .top image {
  width: 120rpx;
  height: 120rpx;
}

.none {
  display: none;
}
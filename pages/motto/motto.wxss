.input-block {
    width: 80%;
    height: auto;
}

.motto-input {
    width: 100%;
    height: 200rpx;
    margin: 0 auto;
    box-shadow: 0px 2px 5px #aaaaaa;
    border-radius: 5px;
    margin-bottom: 40rpx;
}

.motto-input textarea {
    width: 100%;
    height: 80%;
}

.clear text {
    transform: translateY(-40rpx)
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.container image {
    width: 140rpx;
    height: 140rpx;
    margin-bottom: 40rpx;
}

.submit {
    background: #3caa9a;
    color: white;
}
.zhezhao {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    background: #000;
}

.zhezhao image {
    width: 100%;
    height: 100%;
    opacity: .6;
}

.block {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.motto {
    width: 85%;
    text-align: center;
    position: fixed;
    top: 100rpx;
    color: #fff;
    font-size: 40rpx;
}

.countCircle {
    width: 360rpx;
    height: 360rpx;
    border: 10rpx solid #ffffff;
    border-radius: 50%;
    text-align: center;
    line-height: 360rpx;
    color: #ffffff;
    font-size: 64rpx;
    font-weight: 700;
    box-shadow: 0 0 5px #5e5e5e inset, 0 0 10px #5e5e5e;
}

.countText {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}

.countText p {
    color: #ffffff;
}

.countText .top {
    margin-bottom: 20rpx;
}
page {
    background-color: #f3f5f7;
}

.information {
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    margin-top: 40rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.block_top {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.topImg image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.name {
    color: #fff;
}

.block {
    width: 100%;
    height: 120rpx;
    display: flex;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    margin-top: 40rpx;
}

.block view {
    width: 40%;
    height: 60rpx;
    /* background: #3caa9a; */
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #afafad;
    /* border-radius: 10px; */
}

.con_block {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
}

.bg {
    width: 100%;
    height: 400rpx;
    filter: blur(10px);
    background: rgba(0, 0, 0, 0.3);
}

.bg image {
    width: 100%;
    height: 100%;
    transform: scale(1.5);
}

.detail {
    width: 90%;
    height: 600rpx;
    background-color: #fff;
    margin: 0 auto;
    margin-top: 430rpx;
    box-shadow: 0 2px 5px #e4e7ea;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.detail .title {
    font-size: 32rpx;
    color: #000;
}

.detail view {
    width: 80%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #afafad;
}

.detail .week {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px dashed #afafad;
}

.detail .month {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.feedBack {
    width: 90%;
    height: 80rpx;
    background-color: #fff;
    margin: 0 auto;
    margin-top: 30rpx;
    line-height: 80rpx;
    text-indent: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #000;
    box-shadow: 0 2px 5px #e4e7ea;
}

.feedBack .arrow {
    width: 60rpx;
    height: 80rpx;
    margin-right: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.feedBack image {
    width: 40rpx;
    height: 40rpx;
}